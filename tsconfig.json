{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "preserveValueImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "types": [
      "webpack-env"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "custom-types"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.stories.ts"
  ]
}
